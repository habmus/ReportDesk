<!DOCTYPE html>
<html lang="en">
<head>
    <title>Library Webpage</title>
    
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.js"></script>
    <script src="https://cdn.jsdelivr.net/gh/emn178/chartjs-plugin-labels/src/chartjs-plugin-labels.js"></script>

</head>
<body>
    <div class="main">

          <nav>
              <a href="/pages/Report.html" onclick="goBack()">Go Back</a>
          </nav>
          <section title="Graph">
            <canvas id="myChart"></canvas> 
          </section>
          
          <hr>
          
          <section title="Table">
          </section>
          <script>
                durationChart(<%- JSON.stringify(Object.values(reportDuration[0])) %>)
                function durationChart(questions)
                {
                var xValues = ["Less Then 5min", "More Than 5min", "More Than 30min"];
                var yValues = questions;
                var barColors = ["black","blue","#DAA520"];

                new Chart("myChart", {
                type: "pie",
                data: {
                        labels: xValues,
                datasets: [{
                    backgroundColor: barColors,
                    data: yValues
                          }]
                },
                options: 
                {
                title: {display: false,},
                plugins:{labels: {fontSize: 25,  fontColor: 'white',}}
                }
                });

                var table ="<table><tr><th>Duration Range</th><th>Total Questions<th></tr>"+
                "<tr>"+ "<td>" +xValues[0] + "</td><td>" + yValues[0] + "</td></tr>" +
                "<tr>"+ "<td>" +xValues[1] + "</td><td>" + yValues[1] + "</td></tr>" +
                "<tr>"+ "<td>" +xValues[2] + "</td><td>" + yValues[2] + "</td></tr>"
                + "</table>";
                document.querySelector('[title="Table"]').innerHTML = table;
                }
          </script>
</body>
</html>
